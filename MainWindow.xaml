<Window x:Class="Computer_Support_Info.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Support_Info"
        mc:Ignorable="d"
        Title="Computer-Support-Info" Height="450" Width="800" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="450">
    <DockPanel Background="#FFD8E8E5">
        <Menu Height="Auto" VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="Aktionen">
                <MenuItem Header="Speedtest" Click="MenuItem_Click"/>
            </MenuItem>

        </Menu>

        <DataGrid x:Name="SupportInfosGrid" Height="Auto" ItemsSource="{Binding}"
                  
                  Loaded="SupportInfosGrid_Loaded" ColumnWidth="SizeToCells" Margin="5,5,5,5" DockPanel.Dock="Top" GridLinesVisibility="Horizontal" RowHeaderWidth="0">
            <DataGrid.HorizontalGridLinesBrush>
                <SolidColorBrush Color="#25000000"/>
            </DataGrid.HorizontalGridLinesBrush>
        </DataGrid>
        <Button x:Name="BtnExit" Content="Exit" Margin="25" Click="BtnExit_Click" FontSize="16" Width="692" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" />
        
    </DockPanel>
</Window>
